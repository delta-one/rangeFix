      display "Timeout period for GDB packets"
      default_value [500 ]
      flavor data 
    }

    option CYGDBG_HAL_CRCTABLE_LOCATION{
      display "Location of CRC32 table"
      legal_values ["ROM" "RAM" ]
      default_value ["RAM" ]
      flavor data 
